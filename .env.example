# =================================================
# TOLONI PESCARIAS - CONFIGURAÇÃO DE AMBIENTE
# =================================================
# IMPORTANTE: Copie este arquivo para .env e configure os valores reais
# NUNCA commite o arquivo .env com credenciais reais

# =================================================
# AMBIENTE
# =================================================
APP_ENV=development
APP_DEBUG=true
APP_NAME="Toloni Pescarias"

# =================================================
# BANCO DE DADOS
# =================================================
# Desenvolvimento (localhost)
DB_HOST=localhost
DB_NAME=toloni_pescarias
DB_USER=root
DB_PASS=

# Produção Hostinger (substitua pelos valores reais)
# DB_HOST=localhost
# DB_NAME=u123456789_toloni
# DB_USER=u123456789_user
# DB_PASS=SuaSenhaReal123!
DB_CHARSET=utf8mb4

# =================================================
# URLS DO SISTEMA
# =================================================
# Desenvolvimento
SITE_URL=http://localhost:5173
API_URL=http://localhost:5173/api

# Produção (descomente e configure)
# SITE_URL=https://tolonipescarias.com.br
# API_URL=https://tolonipescarias.com.br/api

# =================================================
# SEGURANÇA - GERE CHAVES ÚNICAS PARA PRODUÇÃO
# =================================================
# Use: openssl rand -base64 64
JWT_SECRET=SUBSTITUA_POR_CHAVE_UNICA_64_CHARS_MIN
ENCRYPTION_KEY=SUBSTITUA_POR_CHAVE_UNICA_32_CHARS_MIN

# Hash salt para senhas (use: openssl rand -hex 32)
PASSWORD_SALT=SUBSTITUA_POR_SALT_UNICO_64_CHARS

# =================================================
# EMAIL/SMTP
# =================================================
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_USERNAME=noreply@tolonipescarias.com.br
SMTP_PASSWORD=SuaSenhaEmailReal123!
SMTP_FROM_EMAIL=noreply@tolonipescarias.com.br
SMTP_FROM_NAME="Toloni Pescarias"

# =================================================
# UPLOADS E LIMITES
# =================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp,pdf
UPLOAD_PATH=uploads

# =================================================
# SESSÃO E COOKIES
# =================================================
SESSION_LIFETIME=604800
COOKIE_DOMAIN=
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=Lax

# Produção (descomente)
# COOKIE_DOMAIN=.tolonipescarias.com.br
# COOKIE_SECURE=true

# =================================================
# ADMINISTRAÇÃO
# =================================================
ADMIN_EMAIL=admin@tolonipescarias.com.br
ADMIN_NAME="Administrador Toloni"

# =================================================
# LOGS E MONITORAMENTO
# =================================================
LOG_LEVEL=debug
LOG_PATH=logs
BACKUP_PATH=backups
SECURITY_LOG_ENABLED=true

# =================================================
# RATE LIMITING
# =================================================
RATE_LIMIT_LOGIN=10
RATE_LIMIT_API=60
RATE_LIMIT_WINDOW=60

# =================================================
# DESENVOLVIMENTO - REMOVER EM PRODUÇÃO
# =================================================
ENABLE_DEBUG_TOOLBAR=true
ENABLE_QUERY_LOG=true